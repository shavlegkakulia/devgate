@{
    string page = ViewBag.page ?? null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - devgate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script defer src="~/lib/fontawesome-5/js/all.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="stickytop">
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt="devgate" class="d-none d-md-none d-sm-none d-lg-block" /><img src="~/images/mobilelogo.svg" alt="devgate" class="d-blobk d-lg-none" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex flex-lg-row-reverse mt-lg-0 mt-3">
                    <ul class="navbar-nav">
                        <li class="nav-item d-lg-flex align-items-lg-center nav-has-border @(page == "Home"? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item d-lg-flex align-items-lg-center nav-has-border @(page == "Services"? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Services">Services</a>
                        </li>
                        <li class="nav-item d-lg-flex align-items-lg-center nav-has-border @(page == "Projects"? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Projects">Projects</a>
                        </li>
                        <li class="nav-item d-lg-flex align-items-lg-center nav-has-border @(page == "Competences"? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Competences">Competencies</a>
                        </li>
                        <li class="nav-item d-lg-flex align-items-lg-center nav-has-border @(page == "AboutUs"? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About us </a>
                        </li>
                        <li class="nav-item d-lg-flex align-items-lg-center mt-4 mt-lg-1">
                            <a class="text-white btn btn-primary w-100-mb ml-md-0" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item d-flex align-items-lg-center mt-md-3 position-relative">
                            <div style="width: 49px" class="h-d-m"></div>
                            <div class="flowable mt-2 mt-lg-0">
                                <a class="nav-link text-dark" asp-area="">GE</a>
                                <a class="nav-link text-dark ml-3 ml-lg-0" asp-area="">EN</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid bg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 items nopad">
                        <div class="footer-items">
                            <div class="footer-item"><a href="#"><img src="~/images/mobilelogo.svg" alt="img" class="mobilelogo d-blobk d-lg-none" /></a></div>
                            <div class="footer-item"><a href="#">Services</a></div>
                            <div class="footer-item"><a href="#">Projects</a></div>
                            <div class="footer-item"><a href="#">Competencies</a></div>
                            <div class="footer-item"><a href="#">About us</a></div>
                            <div class="footer-item"><a href="#">Contact</a></div>
                        </div>
                        <div class="footer-items">
                            <div class="footer-item"><a href="#"><i class="fas fa-map-marker-alt"></i>#27b Adam Mitskevichi str</a></div>
                            <div class="footer-item"><a href="#"><i class="far fa-envelope"></i>info@devgate.ge</a></div>
                            <div class="footer-item forsoc">
                                <div class="socias d-flex">
                                    <a href="#" class="soc twit"><i class="fab fa-twitter"></i></a>
                                    <a href="#" class="soc in"><i class="far fa-envelope"></i></a>
                                    <a href="#" class="soc git"><i class="fab fa-github"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('.nav-tabs li').click(function () {
                $('.nav-tabs li').removeClass('active');
                $(this).addClass('active');
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
