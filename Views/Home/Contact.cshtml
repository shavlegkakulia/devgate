@{
    ViewData["Title"] = "Contact";
}
<div class="container d-blobk d-lg-none">
    <div class="row">
        <div class="col-lg-12">
            <a href="#" class="back"><i class="fas fa-chevron-left"></i> Contact</a>
        </div>
    </div>
</div>

<div class="container parent contact">
        <div class="row">
            <div class="col-lg-6 container bg">
                <div class="title">
                    Feel Free and Contact us about
                    your magic project
                </div>

                <div class="contact-item">
                    <div class="item">Address</div>
                    <div class="addition">
                        <i class="fas fa-map-marker-alt"></i> #27b Adam Mitskevichi str
                    </div>
                </div>

                <div class="contact-item">
                    <div class="item">Work hours</div>
                    <div class="addition">
                        <i class="fas fa-clock"></i> Mon - Fri 10:00-18:00
                    </div>
                </div>

                <div class="contact-item">
                    <div class="item">Contacts</div>
                    <div class="addition">
                        <i class="far fa-envelope"></i> info@devgate.ge
                    </div>
                </div>

                <div class="contact-item">
                    <div class="item">Phone number</div>
                    <div class="addition">
                        <i class="fas fa-phone-alt"></i> +995. 555 555 555
                    </div>
                </div>

                <div class="contact-item socias">
                    <div class="item">Follow us</div>
                    <div class=" d-flex">
                        <a href="#" class="soc twit"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="soc in"><i class="far fa-envelope"></i></a>
                        <a href="#" class="soc git"><i class="fab fa-github"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 container bg forms">
                <form class="w-75 float-right contact-section">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Please enter the Email *</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email*">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Name</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="NameExample">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPhone1">Phone number</label>
                        <input type="text" class="form-control" id="exampleInputPhone1" placeholder="555-555-555">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Tell us about your project </label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Write something..."></textarea>
                    </div>
                    <div class="d-flex btn-container">
                        <button class="btn btn-gradient" type="button">Send</button> <a href="#" class="review">I want leave review</a>
                    </div>
                </form>
            </div>
        </div>
</div>
